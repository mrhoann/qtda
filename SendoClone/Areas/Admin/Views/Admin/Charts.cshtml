
@{
    ViewBag.Title = "Charts";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 style="margin-left:80px">Thống kê</h2>
<div style="width: 90%; height:auto; margin: 0 auto;display:flex;flex-wrap:wrap;margin-top:50px">
