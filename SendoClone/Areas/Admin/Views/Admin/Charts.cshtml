            <span style="font-weight:bold;font-size:20px;margin-left:10px;color:white">@ViewBag.dhmoi</span></br>
            <div style="display:flex">

                <span style="font-size: 18px; margin-left: 10px;font-weight:500;color:white">Đơn hàng mới</span>
                <i style="position:relative;left:100px;font-size:60px;color:white" class="fas fa-cart-plus"></i>
            </div>
        </div>
        <div style="width:100%;height:auto;text-align:center">
            <a style="color:white" href="">Xem thêm</a>
        </div>
    </div>

    <div style="float:left;margin-left:8px; width:370px;height:220px;background-color:dodgerblue;display:flex;flex-direction:column;justify-content:space-around">
