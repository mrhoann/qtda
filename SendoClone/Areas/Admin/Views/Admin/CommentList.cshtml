
@{
    ViewBag.Title = "CommentList";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<style>
    * {
        font-family: sans-serif;
    }

    body {
        text-align: left;
    }

    table th, td {
        border: 1px solid #333;
    }

    #form {
        display: flex;
        flex-direction: column;
        width: 70%;
        height: auto;
        margin: 0 auto;
        margin-top: 30px;
    }

    table {
        margin: 0 auto;
        margin-top: 30px;
        text-align: center;
    }

    #form input {
        outline: none;
        height: 40px;
        width: 100%;
        margin-top: 10px;
    }

        #form input:focus {
            border: 2px solid blue;
        }

    h2 {
        color: dodgerblue;
        width: 70%;
        height: auto;
        font-weight: bold;
        margin: 0 auto;
        position: relative;
        top: 10px;
    }
</style>


<table style="width:70%">
        <h2>Danh sách bình luận</h2>
        <tr>
            <th>Tên khách hàng</th>
            <th>Số điện thoại</th>
            <th>Nội dung bình luận</th>
            <th>ID sản phẩm</th>
            <th>Ngày bình luận</th>
            <th>Thao tác</th>
        </tr>
        @foreach(var item in ViewBag.myListComment)
        {
            foreach (var itemCustomer in ViewBag.myListCustomer)
            {
                if(item.UserID == itemCustomer.UserID)
                    {

                    <tr>
                        <td>@itemCustomer.CustomerName</td>
                        <td>@itemCustomer.Phone</td>
                        <td>@item.CommentContent</td>
                        <td>@item.ProductID</td>
                        <td>@item.CommentDate</td>
                        <td><a class="RemoveComment" style="" href="/Admin/Admin/DeleteComments/@item.ID">Xóa</a></td>
                    </tr>
                    }

                }
            }
        
</table>


<script>
    var Remove = document.getElementsByClassName('RemoveComment');
    for (let i = 0; i < Remove.length; i++) {
        Remove[i].addEventListener('click', (event) => {
            var select = confirm("Are you sure you want to delete this order?");
            if (select == true) {

            } else {
                event.preventDefault();
            }
        })
    }
</script>

