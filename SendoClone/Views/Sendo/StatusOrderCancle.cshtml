
@{
    ViewBag.Title = "StatusOrderCancle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="main-manager-order-wrap">
    <div class="main-category-order">
        <div class="main-category-info-user">
            <ul>
                <li>
                    <div class="main-category-wrap-icon-user">

                        <img width="30" src="data:image/gif;base64,">
                    </div>
                </li>
                <li>
                    <span class="main-category-name-user">@ViewBag.myCustomer.CustomerName</span><br>
                    <a class="update-account" href="/Sendo/Address">Chỉnh sửa tài khoản</a>
                </li>
            </ul>
        </div>
        <div class="main-transaction">
            <span class="main-transaction-title">
                <span>
                    Quản lí giao dịch
                </span>
            </span>
            <ul class="nav-item-order-user">
                <li>
                    <a href="#">
                        <div class="icon-order-nav">
                            <i class="far fa-address-card"></i>
                        </div>
                        Đơn hàng
                    </a>
                </li>
                <li><a href="#"><div class="icon-order-nav"><i class="fas fa-history"></i></div> Đơn hàng dịch vụ tiện ích</a></li>
                <li><a href="#"><div class="icon-order-nav"><i class="fas fa-money-check-alt"></i></div> Tài khoản Senpay</a></li>

                <li><a href="#"><div class="icon-order-nav"><i class="fas fa-map-marker-alt"></i></div> Địa chỉ ngân hàng</a></li>
                <li><a href="#"><div class="icon-order-nav"><i class="far fa-heart"></i></div> Sản phẩm yêu thích</a></li>
            </ul>
        </div>
        <div class="main-transaction">
            <span class="main-transaction-title">
                <span>
                    Quản lí tài khoản
                </span>
            </span>
            <ul class="nav-item-order-user">
                <li>
                    <a href="#">
                        <div class="icon-order-nav">
                            <i class="far fa-address-book"></i>
                        </div>
                        Thông tin tài khoản
                    </a>
                </li>
                <li><a href="#"><div class="icon-order-nav"><i class="fas fa-store-alt"></i></div> Shop yêu thích</a></li>
                <li><a href="#"><div class="icon-order-nav"><i class="fas fa-cannabis"></i></div> Ưu đãi của tôi</a></li>

                <li><a href="#"><div class="icon-order-nav"><i class="far fa-question-circle"></i></div> Hỏi đáp</a></li>
                <li><a href="#"><div class="icon-order-nav"><i class="fas fa-users"></i></div> Liên kết mạng xã hội</a></li>
            </ul>
        </div>
        <div class="advertisiment-order">
            <span>
                Cài đặt <b>Siêu ứng dụng Sendo</b> trên smartphone để <span style="color: red;font-weight: bold;">“NHẬN THÔNG BÁO TRẠNG THÁI ĐƠN HÀNG”</span> mọi lúc mọi nơi
            </span>
            <ul>
                <li>
                    <a href="">
                        <img width="110" src="https://contactbase.net/wp-content/uploads/2018/12/Download-on-the-AppStore.png" />
                    </a>
                </li>
                <li>
                    <a href="">
                        <img width="120" src="https://www.max983fm.com/wp-content/uploads/2016/05/Google-Play.png" />
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="main-status-order">
        <span class="main-status-order-title">Quản lí đơn hàng</span>
        <div class="main-status-order-product">
            <ul>
                <a href="/Sendo/ManagerOrderUser">
                <li id="order-user-1">Chờ xác nhận</li>
                </a>
                <a href="/Sendo/StatusOrderConfirm">
                <li id="order-user-2">Đã xác nhận</li>
                </a>
                <a href="/Sendo/StatusOrderShiping">
                <li id="order-user-3">Đang vận chuyển</li>
                </a>
                <a href="/Sendo/StatusOrderShiped">
                <li id="order-user-4">Đã giao hàng</li>
                </a>
                <a href="/Sendo/StatusOrderCancle">
                <li id="order-user-5">Đã hủy</li>
                </a>
            </ul>

            @foreach (var itemOrder in ViewBag.myListOrder)
            {
                if (itemOrder.UserID == ViewBag.myUserID)
                {
                    foreach (var itemOrderDetails in ViewBag.myListOrderDetails)
                    {
                        if (itemOrder.ID == itemOrderDetails.OrderID && itemOrderDetails.Status == "0")
                        {
                            ViewBag.check = 1;
                            foreach (var itemProduct in ViewBag.myListProduct)
                            {
                                string myPrice = Convert.ToString(itemProduct.ProductPriceNew);
                                string mainPrice = myPrice + ".000";
                                if (itemOrderDetails.ProductID == itemProduct.ID)
                                {

                                    <div style="border-bottom:2px solid gray;" class="main-item-product-order-user">
                                        <img width="120" src="@Url.Content(itemProduct.ProductImage)" alt="">
                                        <span style="font-size:14px;width:50px" class="main-item-product-name-order">
                                            @itemProduct.ProductName
                                        </span>
                                        <span>|</span>
                                        <span class="main-item-product-price-order">
                                            <span class="main-item-product-title-order"> Giá:</span> @mainPrice đ
                                        </span>
                                        <span>|</span>
                                        <span class="main-item-product-quantity-order">
                                            <span class="main-item-product-title-order">Số lượng:</span>   x @itemOrderDetails.Quantity
                                        </span>
                                        <span>|</span>
                                        <span class="main-item-product-total-order">
                                            <span class="main-item-product-title-order">Tổng:</span>  @itemOrderDetails.Total đ
                                        </span>
                                        <span>|</span>
                                        <span class="main-item-product-status-order">

                                            <span class="main-item-product-title-order">Trạng thái: </span>
                                            @if (itemOrderDetails.Status == "0")
                                            {
                                                <span style="display:none" id="order-user-status-now">@itemOrderDetails.Status</span>
                                                <span><i style="color:red" class="fas fa-times"></i> Hàng đã bị hủy</span>
                                            }
                                        </span>
                                       
                                       
                                    </div>
                                }
                            }
                        }
                    }
                }
            }

            @if (ViewBag.check == 0)
            {

                <div style="margin-top:30px" class="notification-cart-empty">
                    <span>Bạn chưa có đơn hàng nào bị hủy.</span>
                </div>
            }
        </div>

    </div>
</div>

<script>
    const status = document.getElementById('order-user-status-now').innerHTML;
    if (status == "0") {
        document.getElementById('order-user-5').style.borderBottom = '2px solid orangered';
    }
</script>

