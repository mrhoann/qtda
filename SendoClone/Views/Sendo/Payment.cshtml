
@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model SendoClone.Models.myCart

<style>
    .btn-payment:hover{
        cursor:pointer;
    }
</style>
<div class="main-payment-wrap">
    <div style="width:1280px;position:relative;left:10px" class="main-payment-wrap-title">
        <span>XÁC NHẬN - THANH TOÁN</span>
    </div>
    <div class="main-payment-content">
        <div class="main-payment-info-used">
            <div class="main-address-ship">
                <div class="main-address-item">
                    <svg width="2.4rem" height="2.4rem" class="headerIcon_1mBD"><path d="M11.6 4A5.596 5.596 0 006 9.6C6 13.8 11.6 20 11.6 20s5.6-6.2 5.6-10.4c0-3.096-2.504-5.6-5.6-5.6zm0 7.6a2 2 0 11.001-4.001A2 2 0 0111.6 11.6z"></path></svg>
                    <span>Địa chỉ nhận hàng</span>
                </div>
                <div class="main-address-content">
                    <span>@ViewBag.myCustomer.CustomerName</span> |
                    <span class="main-phone-user">@ViewBag.myCustomer.Phone</span><br>
                    <div class="wrap-info-add">
                        <span class="address-private-house">
                            @if (ViewBag.myCustomer.TypeAdress == 1)
                            {
                                <span style="color:white">Nhà riêng</span>
                            }
                            else
                            {
                                <span style="color:white">Công ty</span>
                            }
                        </span>
                        <span>
                            <span>@ViewBag.myCustomer.Adress</span>
                            <span>@ViewBag.myCustomer.Wards</span>
                            <span>@ViewBag.myCustomer.City</span>

                        </span>
                    </div>
                </div>
            </div>
            <div class="main-method-ship">
                <div class="main-address-item">
                    <svg width="1.6rem" height="2.4rem" viewBox="0 0 24 24"><g fill="none" fill-rule="evenodd"><path d="M0 0h24v24H0z"></path><path fill="#4A90E2" d="M12.027 6.287c.304-.002.613-.106.802-.264.316-.264.318-.646.004-.912-.412-.35-1.187-.35-1.604-.003-.321.267-.317.664.012.924.236.186.514.245.786.255M16.03 9.65c-.017-.129-.014-.297-.069-.443a.5.5 0 00-.24-.264c-.27-.113-.55-.21-.835-.274a2.7 2.7 0 01-.977-.446 7.044 7.044 0 00-.535-.353 2.56 2.56 0 00-1.949-.304c-.46.108-.838.37-1.23.614a5.88 5.88 0 01-.886.445c-.302.122-.621.201-.934.295-.155.047-.276.142-.285.3-.016.31-.02.625.007.934.01.096.115.222.21.265.269.125.426.326.537.59.41.975 1.04 1.768 1.947 2.332.826.513 1.646.513 2.473.001.92-.568 1.552-1.377 1.966-2.366.097-.231.23-.425.468-.52a.445.445 0 00.29-.376c.02-.132.026-.266.042-.43m.394-1.886c-.023.515.003.503.213.961a2.22 2.22 0 01-.018 1.955c-.087.178-.296.296-.444.446-.081.08-.182.155-.227.254-.531 1.17-1.302 2.126-2.442 2.757-1.019.563-2.03.537-3.031-.042-1.093-.632-1.843-1.564-2.36-2.703a.638.638 0 00-.24-.266 1.18 1.18 0 01-.568-.745c-.11-.433-.143-.877-.01-1.306.07-.229.227-.43.34-.646a.406.406 0 00.059-.189c-.075-1.013.015-2.005.45-2.936.452-.965 1.271-1.464 2.279-1.694.175-.04.353-.067.532-.092.16-.022.281-.066.393-.213.33-.438 1.16-.393 1.449.07.089.143.212.112.326.144.437.12.892.192 1.305.365 1.053.442 1.592 1.308 1.802 2.392.095.49.13.991.192 1.488zM11.682 21c-.75-.064-1.485-.102-2.214-.194-1.301-.164-2.584-.431-3.809-.913-.456-.18-.89-.425-1.323-.66-.246-.134-.354-.354-.334-.652.03-.427.001-.857.034-1.283.045-.555.359-.953.821-1.239.494-.307 1.049-.46 1.602-.617.725-.205 1.447-.42 2.188-.635l-.501.686c-.134.184-.28.36-.397.554-.055.092-.107.244-.067.319.04.076.196.122.302.124.676.011 1.352.008 2.028.003.124-.001.207.03.285.134.438.591.886 1.175 1.326 1.765a.35.35 0 01.073.197c.005.762.003 1.526.003 2.288 0 .026-.007.051-.017.123zm.677-.03c0-.82-.002-1.615.004-2.41a.32.32 0 01.075-.176c.445-.594.89-1.187 1.345-1.774a.332.332 0 01.22